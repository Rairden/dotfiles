# ls    -X: sort by type
#       -F: append file type
#       -l: use a long listing format

alias ls='ls -XF --group-directories-first --color=auto'
alias l='ls -lFX --group-directories-first --color=auto'
alias ll='ls -laX --group-directories-first --color=auto'

alias c='clear'
alias cp='cp -i'	# confirm before overwriting something
alias histsubl="subl $HOME/.zsh_history"
alias hist="vim $HOME/.zsh_history"
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias -g G='| grep'
alias -g R='| rg'
alias -g L='| less'
alias -g V='| vim -'
alias -g S='| subl'

# git
alias difff='diff --color -rup'

# default oh-mh-zsh aliases I use a lot
alias gms='git merge --squash'  # my own
alias gs='git status'
alias gco='git checkout'
alias gst='git stash'
alias grc='git reset --hard && git clean -f'
alias grhh='git reset --hard'

# misc
alias vimrc='vim ~/.vimrc'
alias zshrc='vim ~/.zshrc'
